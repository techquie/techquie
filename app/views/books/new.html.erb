<h2>Book Form</h2>

<%= form_with model: @book do |form| %>
    <div>
        <%= form.label :title %><br/>
        <%= form.text_field :title %>
        <% @book.errors.full_messages_for(:title).each do |message| %>
            <div> <%= message %> </div>
        <% end %>
    </div>

    <div>
        <%= form.label :name %><br/>
        <%= form.text_field :name%>
        <% @book.errors.full_messages_for(:body).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>